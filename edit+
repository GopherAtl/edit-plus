function drawMenuItem_color(item,x,y,width,isSelected)
  term.setCursorPos(x,y)
  term.setBackgroundColor(isSelected and colors.blue or colors.gray)
  --pre
  local w=1
  term.write(" ")
  if item.type=="toggle" then
    term.write("["..(settings[item.property] and "X" or " ").."] ")
    w=w+3
  end
  if #item.pre>0 then
    term.setTextColor(colors.white)
    term.write(item.pre)
    w=w+#item.pre
  end
  term.setTextColor(colors.yellow)
  if item.embedKey then
    term.write(item.hk)
    term.setTextColor(colors.white)
    term.write(item.post)
    w=w+#item.hk+#item.post
    term.write((" "):rep(width-w))
  else
    term.write((" "):rep(width-w-1-#item.hk)..item.hk.." ")
  end
  term.setBackgroundColor(colors.black)
end

function drawMenuItem_basic(item,x,y,width,isSelected)
  term.setCursorPos(x,y)
  term.setBackgroundColor(colors.white)
  term.setTextColor(colors.black)
  local w=1
  term.write(" ")
  if item.type=="toggle" then
    term.write("["..(settings[item.property] and "X" or " ").."] ")
    w=w+3
  end
  if #item.pre>0 then
    term.write(pre)
    w=w+#pre
  end
  if item.embedKey then
    term.write("("..item.hk..")"..item.post)
    w=w+2+#hk+#post
    term.write((" "):rep(width-w))
  else
    term.write((" "):rep(width-w-1-#item.hk)..item.hk.." ")
  end
  term.setBackgroundColor(colors.black)
end

local drawMenuItem=term.isColor() and drawMenuItem_color or drawMenuItem_basic


local function buildMenu(menuDef,parent)
  local items={hkMap={}}
  items.x,items.y=1,h
  items.selected=1
  items.parent=parent
  items.firstShown=1
  if not menuDef.horizontal and items.y+#items>h then
    items.y=h-#items+1
  end

  items.horizontal=menuDef.horizontal
  local longestLabel=0
  local offset=1
  for i=1,#menuDef do
    local menuItem=menuDef[i]
    local item={}
    for k,v in pairs(menuItem) do
      item[k]=v
    end
    local pre,pk,hk,post=menuItem.label:match("^([^&^-]-)(%-?)&(.)([^&]*)")
    item.pre=pre
    item.post=post
    item.hk=hk
    item.embedKey=pk~="-"
    item.x=menuDef.horizontal and offset or items.x
    local labelLen
    if item.embedKey then
      labelLen=#pre+1+#post
      if not term.isColor() then
        labelLen=labelLen+2
      end
    else
      labelLen=#pre+2
      if not term.isColor() then
        labelLen=labelLen+1
      end
    end
    if menuItem.type=="toggle" then
      labelLen=labelLen+4
    end
    item.width=labelLen+2
    offset=offset+labelLen+2
    longestLabel=math.max(longestLabel,labelLen)
    items[#items+1]=item
    items.hkMap[hk]=menuItem.cmd
    if item.type=="submenu" then
      item.submenu=buildMenu(item.submenu,items)
      if not item.submenu.x then error("wat "..item.label) end
      item.submenu.x,item.submenu.y=items.x+item.width,items.y+i-1
      if menuDef.horizontal then
        item.submenu.x,item.submenu.y=item.x,items.y-#item.submenu
      end
      if not item.submenu.x then error("wat "..item.label) end
    end
  end
  items.width=longestLabel+2
  return items
end

drawMenu =function(menuItems)
  if menuItems.horizontal then
    local offset=0
    for i=1,#menuItems do
      if menuItems.x+offset+menuItems[i].width - 1 > w then
        break
      end
      menuItems[i].x=menuItems.x+offset
      drawMenuItem(menuItems[i],menuItems.x+offset,menuItems.y,menuItems[i].width,menuItems.selected==i)
      offset=offset+menuItems[i].width
    end
    menuItems.lastX=offset
  else
    if menuItems.y+#menuItems > h then
      menuItems.y=h - #menuItems+1
    end
    if not menuItems.x then error("wat ") end
    if menuItems.width + menuItems.x  > w then
      menuItems.x=w-menuItems.width
    end
    for i=1,#menuItems do
      drawMenuItem(menuItems[i],menuItems.x,menuItems.y+i-1,menuItems.width,menuItems.selected==i)
    end
  end
end

local function doMenu(menuItems)
  menuItems.selected=1
  --root menu
  --          |15                      |40(26)       |54(39)
  local command
  local exitAll=false

  local keyNext=menuItems.horizontal and keys.right or keys.down
  local keyPrev=menuItems.horizontal and keys.left or keys.up
  while true do
    while true do
      drawMenu(menuItems)
      local e={os.pullEvent()}
      if e[1]=="key" then
        if e[2]==keys.leftCtrl then
          menuItems.selected=nil
          break
        elseif e[2]==keyNext then
          menuItems.selected=menuItems.selected%#menuItems+1
        elseif e[2]==keyPrev then
          menuItems.selected=menuItems.selected==1 and #menuItems or menuItems.selected-1
        elseif e[2]==keys.enter then
          --do the selected thing
          break

        elseif e[2]==keys.tab then
          menuItems.selected="decrease indent"
          break
        end
      elseif e[1]=="char" then
        if menuItems.hkMap[e[2]:lower()] then
          menuItems.selected=menuItems.hkMap[e[2]:lower()]
          break
        end
      elseif e[1]=="mouse_click" then
        local _,btn,clkX,clkY=unpack(e)
        if menuItems.horizontal and
            clkY==menuItems.y and clkX<=menuItems.lastX then
          for i=menuItems.firstShown,#menuItems do
            if menuItems[i].x+menuItems[i].width>clkX then
              menuItems.selected=i
              break
            end
          end
          if btn==1 and menuItems[menuItems.selected].type=="command" then
            exitAll=true
          end
          break
        elseif not menuItems.horizontal and
            clkY>=menuItems.y and clkY<menuItems.y+#menuItems and
            clkX>=menuItems.x and clkX<menuItems.x+menuItems.width then
          menuItems.selected=clkY-menuItems.y+1
          if btn==1 and menuItems[menuItems.selected].type=="command" then
            exitAll=true
          end
          break
        else
          menuItems.selected=nil
          break
        end
      end

    end

    if type(menuItems.selected)=="nil" or menuItems.selected==0 then
      break
    elseif type(menuItems.selected)=="number" then
      local item=menuItems[menuItems.selected]
      if item then
        if item.type=="command" then
          command=item.cmd
        elseif item.type=="submenu" then
          drawMenu(menuItems)
          command=nil
          if doMenu(item.submenu,false,subX,subY,menuItems) then
            exitAll=true
            break
          end
        elseif item.type=="toggle" then
          settings[item.property]=not settings[item.property]
          saveSettings()
          updateViewRect()
          exitAll=true
          command=nil
          break
        end
      end
    elseif type(menuItems.selected)=="string" then
      command=menuItems.selected
    end

    if command then
      if commands[command] then
        commands[command].func()
        exitAll=true
        break
      end
    end
  end

  updateViewRect()
  menuItems.selected=0
  redrawFrom(menuItems.y)
  return exitAll
end




mainMenu=buildMenu(basicMenuDef)
mainMenu.selected=0
redrawFrom(1)
term.setCursorBlink(true)
doCursor()

if not settings.hideMenus then
  drawMenu(mainMenu)
end

while running do

  local e={os.pullEvent()}

  if e[1]=="key" then
    local key=e[2]
    if key==keys.down then
      cursorDown()
      drawLineNum()
      doCursor()
    elseif key==keys.up then
      cursorUp()
      drawLineNum()
      doCursor()
    elseif key==keys.right then
      local lineNum,index=curTextPos()
      if curPos.x>index then
        curPos.x=index
      end
      if curPos.x+scrollPos.x-1>#lines[lineNum].rawText then
        cursorDown()
        drawLineNum()
        setScrollX(1)
        curPos.x=1
      else
        if curPos.x==w then
          setScrollX(scrollPos.x+1)
        else
          curPos.x=curPos.x+1
        end
      end
      updateSelect()
      doCursor()
    elseif key==keys.left then
      if curPos.x==1 then
        cursorUp()
        curPos.x=#cursorRow().rawText+1
        if curPos.x>w then
          setScrollX(curPos.x-w+1)
          curPos.x=w
        end
        drawLineNum()
      else
        curPos.x=curPos.x-1
      end
      updateSelect()
      doCursor()
    elseif key==keys.pageDown then
      if not scrollY(viewRect.h) then
        curPos.y=math.min(viewRect.h,#lines)
      end
      updateSelect()
      doCursor()
    elseif key==keys.pageUp then
      if not scrollY(-viewRect.h) then
        curPos.y=1
      end
      updateSelect()
      doCursor()
    elseif key==keys.leftCtrl then
      mainMenu.selected=1
      doMenu(mainMenu)
      mainMenu.selected=0
      doCursor()
    elseif key==keys.enter then
      if selectBounds then
        deleteSelection()
      end
      --carry on with the cr
      local lineNum,index=curTextPos()
      local curText=lines[lineNum].rawText
      local pre,post=curText:sub(1,index-1),curText:sub(index)
      updateLine(lineNum,pre,true)
      table.insert(lines,lineNum+1,{state={}})
      updateLine(lineNum+1,post)
      if curPos.y==viewRect.h then
        cursorDown()
      else
        curPos.y=curPos.y+1
      end
      curPos.x=1
      redrawFrom(curPos.y-1)
      doCursor()
    elseif key==keys.backspace then
      if selectBounds then
        deleteSelection()
      else
        local lineNum,index=curTextPos()
        if index==1 then
          if lineNum>1 then
            local prevLine=lines[lineNum-1]
            curPos.x=#prevLine.rawText+1
            local curLine=table.remove(lines,lineNum)

            updateLine(lineNum-1,prevLine.rawText..curLine.rawText)
            curPos.y=curPos.y-1
            redrawFrom(curPos.y)
            drawLineNum()
          end
        else
          local curText=lines[lineNum].rawText
          local newText=curText:sub(1,index-2)..curText:sub(index)
          updateLine(lineNum,newText)
          curPos.x=index-1
        end
      end
      doCursor()
    elseif key==keys.delete then
      if selectBounds then
        deleteSelection()
      else
        local lineNum,index=curTextPos()
        local curText=lines[lineNum].rawText
        if index==#curText+1 then
          if lineNum<#lines then
            local nextLine=table.remove(lines,lineNum+1)
            updateLine(lineNum,curText..nextLine.rawText)
            redrawFrom(curPos.y)
          end
        else
          local newText=curText:sub(1,index-1)..curText:sub(index+1)
          updateLine(lineNum,newText)
          curPos.x=index
        end
      end
      doCursor()
    elseif key==keys.home then
      setScrollX(1)
      curPos.x=1
      updateSelect()
      doCursor()
    elseif key==keys["end"] then
      local max=#cursorRow().rawText+1
      if max>w then
        local target=max-w+1
        if target>scrollPos.x then
          setScrollX(target)
          curPos.x=w
        else
          curPos.x=max - scrollPos.x
        end
      else
        curPos.x=max
      end
      updateSelect()
      doCursor()
    elseif key==keys.tab then
      if selectBounds then
        increaseIndent()
      else
        --get the affected line and actual x position in line
        local lineNum, index = curTextPos()
        local line=lines[lineNum]
        --insert our char!
        local left,right=line.rawText:sub(1,index-1),line.rawText:sub(index)
        local tab=#left%2==0 and "  " or " "
        curPos.x=index+#tab
        updateLine(lineNum,left..tab..right)
      end
      doCursor()
    end
  elseif e[1]=="char" then
    local char=e[2]
    if selectBounds then
      deleteSelection()
    end
    --get the affected line and actual x position in line
    local lineNum, index = curTextPos()
    local line=lines[lineNum]
    --insert our char!
    local newText=line.rawText:sub(1,index-1)..char..line.rawText:sub(index)
    curPos.x=index+1
    updateLine(lineNum,newText)
    doCursor()

  elseif e[1]=="mouse_scroll" then
    if e[2]>0 then
      cursorDown()
    else
      cursorUp()
    end
    drawLineNum()
    doCursor()

  elseif e[1]=="mouse_click" then
    if e[2]==1 then
      local x,y=math.min(math.max(e[3],1),w),math.min(math.max(e[4],1),h)
      if y+scrollPos.y-1 > #lines then
        curPos.y=#lines
        curPos.x=#lines[#lines].rawText+1
      else
        curPos.x=x
        curPos.y=y
      end
      updateSelect()
      drawLineNum()
      doCursor()
      lastClickPos={x=x,y=y}
    elseif e[2]==2 then

    elseif e[2]==3 then

    end
  elseif e[1]=="mouse_drag" then
    local dragTo=curToTextPos({x=math.min(math.max(e[3],1),w),y=math.min(math.max(e[4],1),h)})
    dragTo.x=math.min(dragTo.x,#lines[dragTo.y].rawText)
    local newBounds
    local dragFrom=curToTextPos(lastClickPos)
    if dragTo.y<dragFrom.y or (dragTo.y==dragFrom.y and dragTo.x<dragFrom.x) then
      newBounds={dragTo,dragFrom}
    else
      newBounds={dragFrom,dragTo}
    end
    updateSelect(newBounds)
  elseif e[1]=="term_resize" then
    updateViewRect()
    redrawFrom(1)
    doCursor()
  end

end

term.clear()
term.setCursorPos(1,1)